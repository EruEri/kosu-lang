build: [
  [make "configure"]
  ["./configure" 
    "--prefix" prefix 
    "--mandir" "%{prefix}%/man" 
    "--libdir" "%{prefix}%/lib/%{name}%/lib"
    "--includedir" "%{prefix}%/lib/%{name}%/include"
    "--stddir" "%{prefix}%/lib/%{name}%/std"
    ]
  ["dune" "subst"]
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "@install"
    "@runtest" {with-test}
    "@doc" {with-doc}
  ]
]
